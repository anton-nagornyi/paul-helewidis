{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es2020.string"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "newLine": "LF"
  },
  "rootDir": "./src",
  "allowJs": true,
  "isolatedModules": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "node_modules/@milkbox/milksub-common-components/express.d.ts"
  ]
}
